<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">

<head>
    <title>ARaynorDesign Template</title>
    <meta name="description" content="free website template" />
    <meta name="keywords" content="enter your keywords here" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link href="~/GreyJunctionTemplate/css/style.css" rel="stylesheet" />

    <script src="~/GreyJunctionTemplate/js/jquery.min.js"></script>
    <script src="~/GreyJunctionTemplate/js/jquery.easing.min.js"></script>
    <script src="~/GreyJunctionTemplate/js/jquery.nivo.slider.pack.js"></script>

    <script type="text/javascript">
        $(window).load(function () {
            $('#slider').nivoSlider();
        });
    </script>
</head>

<body>
    <div id="main">
        <div id="site_content">
            <div id="site_heading">
          
                <h1>University</h1>
                <h2>&nbsp; Where Learning Begins.....</h2>
            </div><!--close site_heading-->

            <div id="header">
                <div id="menubar">
                    <ul id="menu">
                        <li class="current"><a href="index.html">Home</a></li>
                        <li><a href="@Url.Action("AllCourses", "Course")">Courses Available</a></li>
                        <li><a href="@Url.Action("BlogPage", "TinyMCE")">Student Blog</a></li>
                        <li><a href="@Url.Action("GuestLectureVideos", "Video")">Guest Lectures</a></li>
                        
                    </ul>



                    <div style="padding-left: 750px; font-family: PacificRegular;">

                        @if (@Session["UserName"] == null)
                        {
                            <a href="@Url.Action("SignUp", "Login")" style="color:white">Login</a>
                        }
                        else if (Session["Login"] == "Success")
                        {
                            <h4 style="color:white">
                                Hi, @Session["Name"]
                                &nbsp;<a href="@Url.Action("Logout", "Login")" style="color:white">Sign Out</a>
                            </h4>
                        }
                        else
                        {
                            <a href="@Url.Action("SignUp", "Login")" style="color:white">Login</a>

                        }

                    </div>
                </div>
            </div>
            <div id="banner_image">
                <div id="slider-wrapper">
                    <div id="slider" class="nivoSlider">
                        <img src="~/GreyJunctionTemplate/images/slide1.jpg" />
                        <img src="~/GreyJunctionTemplate/images/slide2.jpg" />
                      
                    </div><!--close slider-->
                </div><!--close slider_wrapper-->
            </div><!--close banner_image-->
            <div id="content">
            @RenderBody()
                <div class="content_item">
                    <h1>Welcome To Your Website</h1>
