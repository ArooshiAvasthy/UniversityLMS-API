<body>
    <div id="main">
        <div id="site_content">
            <div id="site_heading">
                <h1>University</h1>
                <h2>&nbsp; Learning Begins.....</h2>
            </div><!--close site_heading-->
            <div id="header">
                <div id="menubar">
                    <ul id="menu">
                        <li class="current"><a href="index.html">Home</a></li>
                        <li><a href="@Url.Action("AllCourses", "Course")">Courses Available</a></li>
                        <li><a href="@Url.Action("BlogPage", "TinyMCE")">Student Blog</a></li>
                        <li><a href="@Url.Action("GuestLectureVideos", "Video")">Guest Lectures</a></li>
                    </ul>

                    <div style="padding-left: 750px; font-family: PacificRegular;">

                        @if (@Session["UserName"] == null)
                        {
                            <a href="@Url.Action("SignUp", "Login")" style="color:white">Login</a>
                        }
                        else if (Session["Login"] == "Success")
                        {
                             <h4 style="color:white">
                                Hi, @Session["Name"] 
                                 &nbsp;<a href="@Url.Action("Logout", "Login")" style="color:white">Sign Out</a>
                            </h4>

                        }
                        else
                        {
                            <a href="@Url.Action("SignUp", "Login")" style="color:white">Login</a>

                        }

                    </div>

                </div>
            </div>
            <div id="content" style="background-color:whitesmoke;height:590px">
                @RenderBody()

            </div><!--close content-->

            <div class="sidebar_container">

                <div class="sidebar">
                    <div class="sidebar_item">
                        <a href="@Url.Action("AllCourses", "Course")"><h2>Courses</h2></a>
                    </div><!--close sidebar_item-->
                </div><!--close sidebar-->

                <div class="sidebar">
                    <div class="sidebar_item">
                        <a href="@Url.Action("BlogPage", "TinyMCE")"><h2>Student Blogs</h2></a>
                    </div><!--close sidebar_item-->
                </div><!--close sidebar-->

                <div class="sidebar">
                    <div class="sidebar_item">
                        <a href="@Url.Action("AllCourseVideos", "Video")"><h2>Video Tutorials</h2></a>
                    </div><!--close sidebar_item-->
                </div><!--close sidebar-->

                <div class="sidebar">
                    <div class="sidebar_item">
                        <a href="@Url.Action("Index", "Image")"><h2>Image Gallery</h2></a>
                    </div><!--close sidebar_item-->
                </div><!--close sidebar-->

                <div class="sidebar">
                    <div class="sidebar_item">
                        <a href="#"><h2>Contact Us</h2></a>
                    </div><!--close sidebar_item-->
                </div><!--close sidebar-->
            </div><!--close sidebar_container-->

        </div><!--close site_content-->
